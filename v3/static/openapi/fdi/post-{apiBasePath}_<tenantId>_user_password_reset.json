{
  "path": "/{apiBasePath}/<tenantId>/user/password/reset",
  "method": "post",
  "description": "Reset a password using password reset token\n",
  "parameters": {
    "apiBasePath": {
      "name": "apiBasePath",
      "in": "path",
      "description": "Its value depends on the apiBasePath set by the user",
      "required": true,
      "schema": {
        "type": "string",
        "example": "auth"
      }
    },
    "rid": {
      "name": "rid",
      "in": "header",
      "example": "emailpassword",
      "schema": {
        "type": "string"
      }
    }
  },
  "body": {
    "schema": {
      "application/json": {
        "type": "object",
        "example": {
          "method": "token",
          "formFields": [
            {
              "id": "password",
              "value": "newPass123"
            }
          ],
          "token": "ZTRiOTBjNz...jI5MTZlODkxw"
        },
        "properties": {
          "method": {
            "type": "string",
            "example": "token"
          },
          "formfields": {
            "type": "array",
            "example": [
              {
                "id": "email",
                "value": "johndoe@gmail.com"
              },
              {
                "id": "password",
                "value": "testPass123"
              }
            ],
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "enum": [
                    "email",
                    "password"
                  ]
                },
                "value": {
                  "type": "string"
                }
              }
            }
          },
          "token": {
            "type": "string",
            "example": "ZTRiOTBjNz...jI5MTZlODkxw"
          }
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Reset a password using password reset token",
      "content": {
        "application/json": {
          "schema": [
            {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": [
                    "OK"
                  ]
                }
              }
            },
            {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": [
                    "RESET_PASSWORD_INVALID_TOKEN_ERROR"
                  ]
                }
              }
            },
            {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": [
                    "FIELD_ERROR"
                  ]
                },
                "formFields": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "email"
                      },
                      "error": {
                        "type": "string",
                        "example": "Error Message"
                      }
                    }
                  }
                }
              }
            },
            {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": [
                    "GENERAL_ERROR"
                  ]
                },
                "message": {
                  "type": "string"
                }
              }
            }
          ]
        }
      }
    },
    "404": {
      "description": "error code 404",
      "content": {
        "text/plain": {
          "schema": {
            "type": "string",
            "enum": [
              "Not Found"
            ]
          }
        }
      }
    },
    "500": {
      "description": "error code 500",
      "content": {
        "text/plain": {
          "schema": {
            "type": "string",
            "enum": [
              "Internal Error"
            ]
          }
        }
      }
    }
  }
}