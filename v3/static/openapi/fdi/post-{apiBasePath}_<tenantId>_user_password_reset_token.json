{
  "path": "/{apiBasePath}/<tenantId>/user/password/reset/token",
  "method": "post",
  "description": "Generate a new reset password token for this user\n",
  "headers": {
    "rid": {
      "schema": {
        "type": "string"
      }
    }
  },
  "parameters": {
    "apiBasePath": {
      "name": "apiBasePath",
      "in": "path",
      "description": "Its value depends on the apiBasePath set by the user",
      "required": true,
      "schema": {
        "type": "string",
        "example": "auth"
      }
    }
  },
  "body": {
    "schema": {
      "application/json": {
        "type": "object",
        "example": {
          "formFields": [
            {
              "id": "email",
              "value": "test@email.com"
            }
          ]
        },
        "properties": {
          "formFields": {
            "type": "array",
            "example": [
              {
                "id": "email",
                "value": "johndoe@gmail.com"
              },
              {
                "id": "password",
                "value": "testPass123"
              }
            ],
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "enum": [
                    "email",
                    "password"
                  ]
                },
                "value": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Generate a new reset password token for this user",
      "content": {
        "application/json": {
          "schema": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": [
                      "OK"
                    ]
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": [
                      "PASSWORD_RESET_NOT_ALLOWED"
                    ]
                  },
                  "reason": {
                    "type": "string",
                    "example": "Token generation was not done because of account take over risk. Please contact support. (HAS_OTHER_EMAIL_OR_PHONE)"
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": [
                      "FIELD_ERROR"
                    ]
                  },
                  "formFields": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "email"
                        },
                        "error": {
                          "type": "string",
                          "example": "Error Message"
                        }
                      }
                    }
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": [
                      "GENERAL_ERROR"
                    ]
                  },
                  "message": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        }
      }
    },
    "404": {
      "description": "error code 404",
      "content": {
        "text/plain": {
          "schema": {
            "type": "string",
            "enum": [
              "Not Found"
            ]
          }
        }
      }
    },
    "500": {
      "description": "error code 500",
      "content": {
        "text/plain": {
          "schema": {
            "type": "string",
            "enum": [
              "Internal Error"
            ]
          }
        }
      }
    }
  }
}