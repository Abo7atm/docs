        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "enum": [
                  "OK"
                ]
              },
              "roles": {
                "type": "array",
                "items": {
                  "type": "string",
                  "example": "admin"
                }
              }
            }
          }
        }
      }
    },
    "400": {
      "description": "error code 400",
