{
  "path": "/appid-<appId>/recipe/permission/roles",
  "method": "get",
  "description": "Retrive the roles associated with the permission\n",
  "headers": {
    "rid": {
      "required": false,
      "schema": {
        "type": "string"
      }
    },
    "Authorization": {
      "required": false,
      "schema": {
        "type": "string"
      }
    },
    "cdi-version": {
      "description": "X.Y of the X.Y.Z CDI version.",
      "schema": {
        "type": "string"
      }
    }
  },
  "parameters": {
    "permission": {
      "name": "permission",
      "in": "query",
      "required": true,
      "schema": {
        "type": "string",
        "example": "permission"
      }
    }
  },
  "body": {},
  "responses": {
    "200": {
      "description": "The operation was successful",
